{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "Node",
        "lib": ["DOM", "ES2022"],
        "experimentalDecorators": true,
        "useDefineForClassFields": false,
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "outDir": "./dist"
    },
    "include": ["src", "webpack.config.mts"]
}
